---
// import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'
import HeaderLink from './HeaderLink.astro'

import { Box, Center, Cluster } from '@cc/index.ts'
import Select from '@components/select-component.astro'
---

<header class="box invert">
  <Center andText={true} intrinsic={true}>
    <Box>
      <Cluster>
        <Box padding="0" borderWidth="var(--border-thin)"
          ><a href="../"><h6>{SITE_TITLE}</h6></a></Box
        >
        <Select />

        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="/test">Test</HeaderLink>
        <HeaderLink href="/mytest">mytest</HeaderLink>
      </Cluster>
    </Box>
  </Center>
</header>
