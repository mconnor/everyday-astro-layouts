---
import HeaderLink from './HeaderLink.astro'

import { Box, Cluster } from '@cc/index'
import Select from '@components/Select'

type Props = {
  invertMe: boolean
}

const { invertMe }: Props = Astro.props
---

<header class:list={['box', { invert: invertMe }]}>
  <Cluster justify="space-between">
    <Box padding="0" borderWidth="1px">
      <Select client:only="react" transition:persist />
    </Box>

    <Box>
      <Cluster>
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="/test">Test</HeaderLink>
        <HeaderLink href="/mytest">mytest</HeaderLink>
      </Cluster>
    </Box>
  </Cluster>
</header>
