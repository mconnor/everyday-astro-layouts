        <Card w={W} h={H}>
            <Frame ratio="16:9" slot="image-slot">
                <Image
                    width={W}
                    height={H}
                    src=`https://picsum.photos/${W}/${H}?random=${Math.floor(Math.random() * 1000)}`
                    alt="Image alt text"
                />
            </Frame></Card
        ></Stack
    >
</Box>

