---
import { Box } from '@cc/index'
interface Props {
  date: Date
}

const { date } = Astro.props
---

<Box
  ><time datetime={date.toISOString()}>
    {
      date.toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })
    }
  </time></Box
>
