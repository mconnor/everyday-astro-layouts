---
import './Box.css'

type Props = {
    padding?: string
    borderWidth?: string
    invert?: boolean
}
const { padding = '0', borderWidth = '.125rem', invert = false } = Astro.props
---

<box-l padding={padding} borderWidth={borderWidth} invert={invert}>
    <slot />
</box-l>

<script src="./Box.ts"></script>
