---
type Props = {
  padding?: string
  borderWidth?: string
  invert?: boolean
}
const { padding, borderWidth, invert } = Astro.props
---

<box-l padding={padding} borderWidth={borderWidth} invert={invert}>
  <slot />
</box-l>
<script src="./Box.js"></script>

<style is:global>
  box-l {
    display: block;
    padding: var(--s1);
    border-width: var(--border-thin);
    /* â†“ For high contrast mode */
    outline: 0.125rem solid transparent;
    outline-offset: -0.125rem;
    color: var(--text-3) !important;
    background-color: var(--surface-3) !important;
  }
</style>
